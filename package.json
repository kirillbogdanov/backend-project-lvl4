{
  "name": "@hexlet/code",
  "version": "0.0.1",
  "description": "Task manager server",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node server/bin/server.js",
    "postinstall": "npm run build && npm run migrate",
    "build": "npm run build:frontend",
    "build:frontend": "webpack",
    "migrate": "knex --knexfile=./knexfile.cjs migrate:latest",
    "migrate:make": "knex --knexfile=./knexfile.cjs migrate:make",
    "migrate:rollback": "knex --knexfile=./knexfile.cjs migrate:rollback",
    "dev": "npm run watch:node",
    "watch:node": "nodemon server/bin/server.js",
    "check": "npm run lint && npm run test",
    "test": "npm run migrate -- --env test && npx -n --experimental-vm-modules -n --no-warnings jest -i --config jest.config.js",
    "test:coverage": "npm run test -- --coverage",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kirillbogdanov/backend-project-lvl4.git"
  },
  "author": "Kirill Bogdanov",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kirillbogdanov/backend-project-lvl4/issues"
  },
  "homepage": "https://github.com/kirillbogdanov/backend-project-lvl4#readme",
  "devDependencies": {
    "@jest/globals": "^26.6.2",
    "css-loader": "^5.0.1",
    "eslint": "^7.13.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "faker": "^5.1.0",
    "jest": "^26.6.3",
    "set-cookie-parser": "^2.4.6",
    "sqlite3": "^5.0.0",
    "style-loader": "^2.0.0",
    "webpack": "^5.6.0",
    "webpack-cli": "^4.2.0"
  },
  "dependencies": {
    "bootstrap": "^4.5.3",
    "crypto": "^1.0.1",
    "dotenv": "^8.2.0",
    "fastify": "^3.8.0",
    "fastify-formbody": "^5.0.0",
    "fastify-method-override": "^1.5.1",
    "fastify-objectionjs": "^0.3.0",
    "fastify-passport": "^0.1.0",
    "fastify-secure-session": "^2.3.0",
    "fastify-static": "^3.3.0",
    "i18next": "^19.8.4",
    "knex": "^0.21.12",
    "lodash": "^4.17.20",
    "objection": "^2.2.3",
    "objection-unique": "^1.2.1",
    "pg": "^8.5.1",
    "pg-connection-string": "^2.4.0",
    "pino-pretty": "^4.3.0",
    "point-of-view": "^4.6.0",
    "pug": "^3.0.0",
    "qs": "^6.9.4"
  }
}
